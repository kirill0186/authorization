doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        link(href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet")
        link(rel="stylesheet", href="/css/style.css")
        script(src="js/products.js")
        title Products
    body
        a(href="/signin") Sign In        
        div#email
        each product in products ? products : ["There are no products"]
            .card
                div= product.name
                div= product.price
                a
                    button(onclick=`buyItem(${product.id})`) Buy